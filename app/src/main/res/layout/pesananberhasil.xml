<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pesananberhasil">>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/buttonback"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="320dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/background"
            android:layout_width="328dp"
            android:layout_height="625dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg" />


        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="223dp"
            android:layout_height="214dp"
            android:layout_alignStart="@id/background"
            android:layout_alignTop="@id/background"
            android:layout_alignEnd="@id/background"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-120dp"
            android:layout_marginEnd="50dp"
            app:srcCompat="@drawable/groupcentang" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/background"
            android:layout_alignTop="@id/background"
            android:layout_alignEnd="@id/background"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="PESANAN BERHASIL"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/background"
            android:layout_alignTop="@id/background"
            android:layout_alignEnd="@id/background"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="KODE PESANAN"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/background"
            android:layout_alignTop="@id/background"
            android:layout_alignEnd="@id/background"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="XX/XXX/XXX"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/buttonlanjut2"
            android:layout_width="237dp"
            android:layout_height="55dp"
            android:layout_alignStart="@+id/background"
            android:layout_alignEnd="@+id/background"
            android:layout_alignBottom="@id/background"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="89dp"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/buttonbg2" />

        <TextView
            android:id="@+id/textlanjut3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/buttonlanjut2"
            android:layout_alignTop="@id/buttonlanjut2"
            android:layout_alignEnd="@id/buttonlanjut2"
            android:layout_alignBottom="@id/buttonlanjut2"
            android:layout_alignParentBottom="true"

            android:fontFamily="@font/poppins_semibold"
            android:text="KEMBALI"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </RelativeLayout>
</ScrollView>