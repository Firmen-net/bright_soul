<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".editProfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="EDIT PROFILE"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/profilpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/profilpic" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilpic"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginStart="0dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/roboto"
            android:text="Nama"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtNama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_login"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Sumirna Faurijah"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txttglLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:text="Tanggal Lahir"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tglLahir"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txttglLahir"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_login"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="06 Januari 2001"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtjeniskelamin"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/tglLahir"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:text="Jenis Kelamin"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/jenisKelamin"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtjeniskelamin"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_login"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Perempuan"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtpekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/jenisKelamin"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:text="Pekerjaan"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/pekerjaan"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtpekerjaan"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_login"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Mahasiswa"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/fifth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pekerjaan"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SIMPAN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins_semibold"
                android:text="SIMPAN"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="#DFEEEA" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>